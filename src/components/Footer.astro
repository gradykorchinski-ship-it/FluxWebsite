---
const currentYear = new Date().getFullYear();
---

<footer
    class="bg-white dark:bg-dark-lighter border-t border-gray-200 dark:border-gray-800 text-sm mt-auto"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
            <!-- Brand & Socials -->
            <div class="md:col-span-4 space-y-4">
                <div class="flex items-center gap-2">
                    <img
                        src="/assets/images/logo.svg"
                        alt=""
                        class="h-6 w-auto"
                        aria-hidden="true"
                    />
                    <span
                        class="font-bold text-lg text-gray-900 dark:text-white"
                        >FluxLinux</span
                    >
                </div>
                <p class="text-gray-500 dark:text-gray-400">
                    Made with ❤️ in Canada.
                </p>

                <div class="flex space-x-4 pt-2">
                    <!-- GitHub -->
                    <a
                        href="https://github.com/gradykorchinski-ship-it/FluxWebsite"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-all hover:scale-110"
                        aria-label="GitHub"
                    >
                        <svg
                            class="h-5 w-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            aria-hidden="true"
                            ><path
                                fill-rule="evenodd"
                                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                clip-rule="evenodd"></path></svg
                        >
                    </a>
                    <!-- X -->
                    <a
                        href="https://x.com/fluxlinuxdistro"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-all hover:scale-110"
                        aria-label="X"
                    >
                        <svg
                            class="h-5 w-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            aria-hidden="true"
                            ><path
                                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>

            <!-- Links Column 1: Products -->
            <div class="col-span-6 md:col-span-2 md:col-start-7">
                <h3
                    class="text-sm font-semibold text-gray-900 dark:text-white tracking-wider uppercase mb-3 text-left"
                >
                    Products
                </h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/os/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >FluxLinux</a
                        >
                    </li>
                    <li>
                        <a
                            href="/computers/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >Computers</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Links Column 2: Help -->
            <div class="col-span-6 md:col-span-2">
                <h3
                    class="text-sm font-semibold text-gray-900 dark:text-white tracking-wider uppercase mb-3 text-left"
                >
                    Help
                </h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/help/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >Docs & Guides</a
                        >
                    </li>
                    <li>
                        <a
                            href="/os/download/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >Download</a
                        >
                    </li>
                    <li>
                        <a
                            href="/help/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >System Requirements</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Links Column 3: Company -->
            <div class="col-span-6 md:col-span-2">
                <h3
                    class="text-sm font-semibold text-gray-900 dark:text-white tracking-wider uppercase mb-3 text-left"
                >
                    Company
                </h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/about/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >About</a
                        >
                    </li>
                    <li>
                        <a
                            href="/blog/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >Blog</a
                        >
                    </li>
                    <li>
                        <a
                            href="/legal/terms/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >Terms</a
                        >
                    </li>
                    <li>
                        <a
                            href="/legal/privacy/"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                            >Privacy</a
                        >
                    </li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div
            class="mt-12 border-t border-gray-200 dark:border-gray-800 pt-8 text-center text-xs text-gray-500 dark:text-gray-500"
        >
            &copy; 2025 - {currentYear} FluxLinux Project. All rights reserved.
        </div>
    </div>
</footer>
