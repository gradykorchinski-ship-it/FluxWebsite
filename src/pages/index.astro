---
import Layout from "../layouts/Layout.astro";
import ScrollAnimations from "../components/ScrollAnimations.astro";
import NewSections from "../components/NewSections.astro";
---

<Layout title="FluxLinux — Lightweight, modern Linux distribution">
	<div
		slot="banner"
		class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 text-white px-4 py-3 text-center text-sm font-medium shadow-lg relative z-50 flex items-center justify-center gap-2"
	>
		<span
			class="bg-white/20 px-2 py-0.5 rounded text-xs font-bold uppercase tracking-wider"
			>Dev Preview</span
		>
		<span
			><span class="font-bold">FluxLinux 1.5</span> is currently in the works.
			Get ready for our best release yet!</span
		>
	</div>

	<!-- Hero Section -->
	<div
		class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 overflow-hidden"
	>
		<!-- Animated background elements -->
		<div class="absolute inset-0 overflow-hidden pointer-events-none">
			<div
				class="absolute -top-40 -right-40 w-80 h-80 bg-blue-400/20 rounded-full blur-3xl animate-pulse-slow"
			>
			</div>
			<div
				class="absolute top-1/2 -left-40 w-96 h-96 bg-indigo-400/20 rounded-full blur-3xl animate-pulse-slow"
				style="animation-delay: 1s;"
			>
			</div>
		</div>

		<div class="max-w-7xl mx-auto relative">
			<div
				class="relative z-10 pb-8 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32"
			>
				<main
					class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28"
				>
					<div class="sm:text-center lg:text-left animate-fade-in">
						<h1
							class="text-4xl tracking-tight font-extrabold sm:text-5xl md:text-6xl"
						>
							<span class="block text-white xl:inline"
								>The future of</span
							>
							<span
								class="block bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent xl:inline"
								>lightweight computing</span
							>
						</h1>
						<p
							class="mt-3 text-base text-blue-100 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0"
						>
							FluxLinux is a modern, high-performance Linux
							distribution designed for speed, simplicity, and
							user control. Built for developers, by a developer.
						</p>
						<div
							class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start gap-3"
						>
							<a
								href="/os/download/"
								class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-semibold rounded-lg text-white bg-gradient-primary hover:shadow-glow md:py-4 md:text-lg transition-all hover:scale-105 shadow-lg"
							>
								Download Now
							</a>
							<a
								href="/os/"
								class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-3 border-2 border-white/30 text-base font-semibold rounded-lg text-white bg-white/10 backdrop-blur-sm hover:bg-white/20 md:py-4 md:text-lg transition-all hover:scale-105"
							>
								Learn More
							</a>
						</div>
					</div>
				</main>
			</div>
		</div>
		<div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
			<img
				class="h-56 w-full sm:h-72 md:h-96 lg:w-full lg:h-full animate-fade-in"
				src="/hero.png"
				alt="FluxLinux Desktop Screenshot"
				loading="eager"
			/>
		</div>

		<!-- Digital Public Goods Badge -->
		<div class="absolute bottom-8 right-8 z-20 hidden md:block">
			<a href="https://digitalpublicgoods.net/" target="_blank">
				<img
					src="/digital-public-goods.svg"
					alt="Digital Public Goods"
					class="w-32 h-32 opacity-90 hover:opacity-100 transition-opacity"
				/>
			</a>
		</div>
	</div>

	<!-- New Sections with Scroll Animations -->
	<NewSections />

	<!-- Ecosystem Section -->
	<div class="bg-gray-50 dark:bg-dark-lighter py-12">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="lg:text-center">
				<h2
					class="text-base text-primary font-semibold tracking-wide uppercase"
				>
					Ecosystem
				</h2>
				<p
					class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
				>
					Everything you need
				</p>
				<p
					class="mt-4 max-w-2xl text-xl text-gray-500 dark:text-gray-400 lg:mx-auto"
				>
					FluxLinux isn't just an OS. It's a cohesive ecosystem
					designed to help you get work done.
				</p>
			</div>

			<div class="mt-10">
				<dl
					class="space-y-10 md:space-y-0 md:grid md:grid-cols-3 md:gap-x-8 md:gap-y-10"
				>
					<div
						class="relative group p-6 bg-white dark:bg-dark-card rounded-xl shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1"
					>
						<dt>
							<div
								class="flex items-center justify-center h-12 w-12 rounded-lg bg-gradient-primary text-white shadow-md group-hover:shadow-glow transition-all"
							>
								<!-- Heroicon name: outline/desktop-computer -->
								<svg
									class="h-6 w-6"
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
									aria-hidden="true"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
									></path>
								</svg>
							</div>
							<p
								class="mt-4 text-lg leading-6 font-semibold text-gray-900 dark:text-white"
							>
								Computers
							</p>
						</dt>
						<dd
							class="mt-2 text-base text-gray-600 dark:text-gray-400"
						>
							Looking for hardware that Just Works™ with
							FluxLinux? Check out our certified computer
							partners.
						</dd>
					</div>

					<div
						class="relative group p-6 bg-white dark:bg-dark-card rounded-xl shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1"
					>
						<dt>
							<div
								class="flex items-center justify-center h-12 w-12 rounded-lg bg-gradient-primary text-white shadow-md group-hover:shadow-glow transition-all"
							>
								<!-- Heroicon name: outline/book-open -->
								<svg
									class="h-6 w-6"
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
									aria-hidden="true"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
									></path>
								</svg>
							</div>
							<p
								class="mt-4 text-lg leading-6 font-semibold text-gray-900 dark:text-white"
							>
								Help & Docs
							</p>
						</dt>
						<dd
							class="mt-2 text-base text-gray-600 dark:text-gray-400"
						>
							Comprehensive documentation and guides to help you
							install, configure, and master your system.
							<br />
							<a
								href="/help/"
								class="text-primary hover:text-primary-hover font-semibold inline-flex items-center gap-1 group-hover:gap-2 transition-all"
								>Visit Help Center <span>&rarr;</span>
							</a>
						</dd>
					</div>

					<div
						class="relative group p-6 bg-white dark:bg-dark-card rounded-xl shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1"
					>
						<dt>
							<div
								class="flex items-center justify-center h-12 w-12 rounded-lg bg-gradient-primary text-white shadow-md group-hover:shadow-glow transition-all"
							>
								<!-- Heroicon name: outline/annotation -->
								<svg
									class="h-6 w-6"
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
									aria-hidden="true"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
									></path>
								</svg>
							</div>
							<p
								class="mt-4 text-lg leading-6 font-semibold text-gray-900 dark:text-white"
							>
								Blog
							</p>
						</dt>
						<dd
							class="mt-2 text-base text-gray-600 dark:text-gray-400"
						>
							Stay up to date with the latest release notes,
							development updates, and community news.
							<br />
							<a
								href="/blog/"
								class="text-primary hover:text-primary-hover font-semibold inline-flex items-center gap-1 group-hover:gap-2 transition-all"
								>Read the Blog <span>&rarr;</span>
							</a>
						</dd>
					</div>
				</dl>
			</div>
		</div>
	</div>

	<!-- Developer Note -->
	<div class="bg-gradient-primary relative overflow-hidden">
		<!-- Background decoration -->
		<div class="absolute inset-0 bg-grid-white/[0.05] bg-[size:20px_20px]">
		</div>

		<div
			class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between relative z-10"
		>
			<h2
				class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl"
			>
				<span class="block">Ready to ship?</span>
				<span class="block text-blue-100"
					>Built by a developer, for everyone.</span
				>
			</h2>
			<div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
				<div class="inline-flex rounded-lg shadow-lg">
					<a
						href="https://github.com/gradykorchinski-ship-it/FluxWebsite"
						target="_blank"
						class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-semibold rounded-lg text-primary bg-white hover:bg-gray-50 transition-all hover:scale-105 hover:shadow-xl"
					>
						View on GitHub
					</a>
				</div>
			</div>
		</div>
	</div>

	<!-- Scroll Animations -->
	<ScrollAnimations />
</Layout>
