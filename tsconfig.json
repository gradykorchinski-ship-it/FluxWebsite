{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "astro": [
        "./node_modules/astro/dist/index.d.ts"
      ],
      "astro:middleware": [
        "./node_modules/astro/dist/virtual-modules/middleware.d.ts"
      ],
      "astro/*": [
        "./node_modules/astro/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    ".astro/types.d.ts",
    "src/env.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}